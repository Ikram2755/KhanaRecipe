<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="profileVM" type="com.ikramsapplication.app.modules.profile.data.viewmodel.ProfileVM"/>
    </data>
    <FrameLayout android:id="@+id/frameStackarrowleft"
        android:layout_height="match_parent" android:layout_width="match_parent">
        <FrameLayout android:id="@+id/framePROFILE"
            android:layout_gravity="start"
            android:layout_height="match_parent" android:layout_width="match_parent">

            <LinearLayout
                android:id="@+id/linearColumnarrowleft"
                style="@style/groupStyle_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|start"
                android:layout_marginBottom="@dimen/_10pxv"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearRowarrowleft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_35pxh"
                    android:layout_marginTop="@dimen/_28pxv"
                    android:layout_marginEnd="@dimen/_34pxh"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageArrowleft"
                        android:layout_width="@dimen/_27pxh"
                        android:layout_height="@dimen/_27pxh"
                        android:layout_marginBottom="@dimen/_115pxv"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_arrowleft"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_arrowleft" />

                    <ImageView
                        android:id="@+id/imageMenem"
                        circular="@{true}"
                        imageRes="@{@drawable/menem}"
                        android:layout_width="@dimen/_128pxh"
                        android:layout_height="@dimen/_128pxh"
                        android:layout_marginStart="@dimen/_81pxh"
                        android:layout_marginTop="@dimen/_14pxv"
                        android:scaleType="centerCrop"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/menem" />

                    <ImageView
                        android:id="@+id/imageCheckmark"
                        android:layout_width="@dimen/_25pxh"
                        android:layout_height="@dimen/_25pxh"
                        android:layout_marginStart="@dimen/_84pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_marginBottom="@dimen/_116pxv"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_checkmark"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_checkmark" />
                </LinearLayout>

                <EditText
                    android:id="@+id/txtGroupSix"
                    style="@style/txtRoundedOutline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_35pxh"
                    android:layout_marginTop="@dimen/_40pxv"
                    android:layout_marginEnd="@dimen/_35pxh"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@{profileVM.profileModel.txtGroupSix}"
                    android:paddingStart="@dimen/_27pxh"
                    android:paddingTop="@dimen/_6pxv"
                    android:paddingBottom="@dimen/_5pxv"
                    android:singleLine="true"
                    android:textColorHint="@color/white"
                    tools:hint="@string/lbl_name"

                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnUpload"
                    style="@style/btnSolidRounded_3"
                    android:layout_width="@dimen/_154pxh"
                    android:layout_height="@dimen/_40pxv"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_35pxh"
                    android:layout_marginTop="@dimen/_15pxv"
                    android:layout_marginEnd="@dimen/_35pxh"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_6pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingBottom="@dimen/_6pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_upload"
                    android:textAllCaps="false"
                    tools:text="@string/lbl_upload" />

                <LinearLayout
                    android:id="@+id/linearRowrectanglethirtythree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_35pxh"
                    android:layout_marginTop="@dimen/_50pxv"
                    android:layout_marginEnd="@dimen/_35pxh"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/favimage1"
                        cornerRadius="@{@dimen/_10pxh}"
                        imageRes="@{@drawable/salad}"
                        android:layout_width="@dimen/_167pxh"
                        android:layout_height="@dimen/_177pxh"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/salad" />


                    <ImageView
                        android:id="@+id/favimage2"
                        cornerRadius="@{@dimen/_10pxh}"
                        imageRes="@{@drawable/dolma}"
                        android:layout_width="@dimen/_167pxh"
                        android:layout_height="@dimen/_177pxh"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/dolma" />
                </LinearLayout>
                <!-- <LinearLayout android:gravity="start"
                    android:id="@+id/linearRowrectanglethirtyfive"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_119pxv"
                    android:layout_marginEnd="@dimen/_35pxh"
                    android:layout_marginStart="@dimen/_35pxh"
                    android:layout_marginTop="@dimen/_20pxv"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageRectangleThirtyFive"
                        android:layout_height="@dimen/_177pxh"
                        android:layout_width="@dimen/_167pxh"
                        android:scaleType="fitXY"
                        cornerRadius="@{@dimen/_10pxh}"
                        imageRes="@{@drawable/img_rectangle33}"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle33"/>
                    <ImageView android:id="@+id/imageRectangleThirtySix"
                        android:layout_height="@dimen/_177pxh"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_width="@dimen/_167pxh"
                        android:scaleType="fitXY"
                        cornerRadius="@{@dimen/_10pxh}"
                        imageRes="@{@drawable/img_rectangle33}"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle33"/>
                </LinearLayout>-->
            </LinearLayout>
            <ImageView android:id="@+id/favimage3"
                android:layout_gravity="bottom|start"
                android:layout_height="@dimen/_177pxh"
                android:layout_marginEnd="@dimen/_35pxh"
                android:layout_marginStart="@dimen/_35pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_width="@dimen/_167pxh"
                android:layout_marginBottom="50dp"
                android:scaleType="fitXY"
                cornerRadius="@{@dimen/_10pxh}"
                imageRes="@{@drawable/kabab}"
                tools:ignore="ContentDescription"
                tools:src="@drawable/kabab"/>
            <ImageView android:id="@+id/favimage4"
                android:layout_gravity="bottom|end"
                android:layout_height="@dimen/_177pxh"
                android:layout_marginEnd="@dimen/_35pxh"
                android:layout_marginStart="@dimen/_35pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_width="@dimen/_167pxh"
                android:layout_marginBottom="50dp"
                android:scaleType="fitXY"
                cornerRadius="@{@dimen/_10pxh}"
                imageRes="@{@drawable/plov}"
                tools:ignore="ContentDescription"
                tools:src="@drawable/plov"/>
        </FrameLayout>
    </FrameLayout>
</layout>
